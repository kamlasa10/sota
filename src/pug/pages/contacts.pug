block content
  .contacts.inner-page
    .container
      h1.inner-page-title.word__inner-page-title Контакти
    .contacts__tabs.tabs
      .tabs__header.header-tabs
        a(href="#clients").header-tabs__single-tab-title.single-tab-title.active.js-contacts-tab-btn
          span ДЛЯ КЛієнтів
        a(href="#marketing").header-tabs__single-tab-title.single-tab-title.js-contacts-tab-btn
          span Для маркетингу
        a(href="#buy").header-tabs__single-tab-title.single-tab-title.js-contacts-tab-btn
          span Для відділу закупівель
      .tabs__body.js-contacts-tab-content.body-tabs
        .body-tabs__tab.js-contacts-tab.active(data-tab="#clients")
          .contacts__content
            .contacts__socials.socials
              a(href="#").socials__link
                +svg('fb')
              a(href="#").socials__link
                +svg('inst')
              a(href="#").socials__link
                +svg('link')
              a(href="#").socials__link.socials__link--4
                +svg('youtube')
            .container
              .contacts__inner
                .contacts__map-wrapper
                  .contacts__map#map1
                .contacts__content-wrapper
                  span.contacts__subtitle Чекаємо на тебе
                  h2.contacts__title ДО ЗВ’ЯЗКУ!
                  ul.contacts__adress.adress-contacts
